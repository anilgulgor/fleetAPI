{
    "compilerOptions": {
        "target": "es6",                          
        "module": "commonjs",                    
        "lib": ["es6", "DOM", "ES2017"],                     
        "allowJs": true,
        "outDir": "build",                          
        "rootDir": "src",
        "strict": true,         
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": ["./types", "node_modules/@types"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "types"
    ]
}